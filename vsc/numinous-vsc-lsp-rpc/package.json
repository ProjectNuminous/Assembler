{
  "name": "numinous-vsc-lsp-rpc",
  "displayName": "Numinous Language Support for Visual Studio Code",
  "description": "Numinous LSP RPC plugin for Visual Studio Code.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:asm"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "numinous-vsc-lsp-rpc.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "asm",
        "extensions": [
          ".s"
        ],
        "aliases": [
          "Assembly"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.32.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
